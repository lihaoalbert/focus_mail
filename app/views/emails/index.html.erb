<h1>Listing emails</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Template</th>
    <th>Template entries</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.body %></td>
    <td><%= email.template_id %></td>
    <td><%= email.template_entries %></td>
    <td><%= link_to 'Show', email %></td>
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

