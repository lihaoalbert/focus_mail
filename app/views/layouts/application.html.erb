<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= full_title yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
    <%= stylesheet_link_tag "application", :media => "all" %>
  </head>
  <body>
    <%= render 'layouts/header' %>

    <div class="container">
      <div class="content">
        <div class="row">
          <%= render 'layouts/sidebar' %>
          <div class="span9">
            <%= yield %>
          </div>
        </div><!--/row-->
      </div><!--/content-->

      <%= render 'layouts/footer' %>

    </div> <!-- /container -->
    <%= javascript_include_tag "application" %>
  </body>
</html>
