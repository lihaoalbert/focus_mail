<tr id="<%= dom_id campaign %>">
  <td><%= link_to campaign.name, campaign_path(campaign) %></td>
  <td><%= campaign.from_name %></td>
  <td><%= campaign.from_email %></td>
  <td><%= campaign.subject %></td>
  <td><%= campaign.template.try(:name) %></td>
  <td><%=l campaign.created_at %></td>
  <td>
    <%= link_to 'Deliver', deliver_campaign_path(campaign.id), :class => 'btn btn-mini btn-primary', :remote => true %>
    <%= link_to 'preview', preview_path(campaign.template.file_name), :class => 'btn btn-mini btn-primary' %>
    <%= link_to 'Edit', edit_campaign_path(campaign), :class => 'btn btn-mini', :remote => true %>
    <%= link_to 'Destroy', campaign_path(campaign), :method => :delete,
      :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger', :remote => true %>
  </td>
</tr>
