<h1>Listing campaigns</h1>

<table>
  <tr>
    <th>Name</th>
    <th>From name</th>
    <th>From email</th>
    <th>Subject</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @campaigns.each do |campaign| %>
  <tr>
    <td><%= campaign.name %></td>
    <td><%= campaign.from_name %></td>
    <td><%= campaign.from_email %></td>
    <td><%= campaign.subject %></td>
    <td><%= campaign.email_id %></td>
    <td><%= link_to 'Show', campaign %></td>
    <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
    <td><%= link_to 'Destroy', campaign, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

