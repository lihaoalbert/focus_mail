<%= form_for @template, remote: true, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <%= render :partial => "common/form_error", :locals => { model: @template } %>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :file_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :file_name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :source, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :source, :class => 'text_area span7', :rows => 5 %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <a onclick="$('#<%= dom_id @template, action_name %>').parent().html('');return false;", class='btn'>Cancel</a>
    </div>
  </fieldset>
<% end %>
